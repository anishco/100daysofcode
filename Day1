#include <iostream>
using namespace std;
void pattern1(int n){
    for(int i=0;i<n;i++){
      for(int k=0;k<n-i-1;k++){
          cout<<" ";
      }
      for(int l=0;l<2*i+1;l++){
          cout<<"*";
      }
      for (int j =0; j<n-i-1; j++)
        {
            cout <<" ";
        }
     cout<< endl;
 }
}
int main() {
    // Write C++ code here
    int n;
    std::cout << "Enter the number!";
   std::cin>>n;
   pattern1(n);
    return 0;
}
